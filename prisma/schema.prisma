generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TodoList {
  id          String @id @default(cuid())
  name        String
  description String?
  todos       Todo[]
  users       String[]
}

model Todo {
  id          String    @id @default(cuid())
  name        String
  description String?
  completed   Boolean
  todoListId  String
  todoList    TodoList  @relation(fields: [todoListId], references: [id])
}

